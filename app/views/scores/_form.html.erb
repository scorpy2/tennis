    <%= form.label :player_one_id %>
    <%= form.collection_select :player_one_id, Player.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :player_two_id %>
    <%= form.collection_select :player_two_id, Player.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :score %>
    <%= form.text_field :score %>
  </div>

  <div class="field">
    <%= form.label :winner_id %>
    <%= form.collection_select :winner_id, Player.all, :id, :name %>
  </div>

